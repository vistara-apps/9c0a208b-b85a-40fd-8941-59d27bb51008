# OnchainKit API Key (required for Base Mini App functionality)
NEXT_PUBLIC_ONCHAINKIT_API_KEY=your_onchainkit_api_key_here

# Base network configuration (automatically handled by MiniKitProvider)
NEXT_PUBLIC_CHAIN_ID=8453

# Optional: Custom RPC URL for Base network
NEXT_PUBLIC_RPC_URL=https://mainnet.base.org

# Optional: IPFS/Arweave configuration for decentralized storage
NEXT_PUBLIC_IPFS_GATEWAY=https://gateway.pinata.cloud
NEXT_PUBLIC_ARWEAVE_GATEWAY=https://arweave.net

# Optional: Analytics and monitoring
NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id_here
